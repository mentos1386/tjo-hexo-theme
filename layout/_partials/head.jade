doctype html
html
    head
        meta(charset='UTF-8')
        title= page.title || config.title
        meta(name='viewport', content='width=device-width, initial-scale=1, maximum-scale=1')
        != css('css/normalize')
        != css('css/main')

        meta(name='description', content=site.description)
        meta(name='author', content=site.author)
    body
